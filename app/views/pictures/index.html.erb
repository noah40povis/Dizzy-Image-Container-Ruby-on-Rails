<p id="notice"><%= notice %></p>

<h1>Pictures</h1>

<table>

  <tbody>
    <h2><%= @pictures.count %> Uploded Pictures</h2>
    <% @pictures.each do |picture| %>
          <div class="row row-cols-1 row-cols-md-3 g-4">
          <% picture.images.each do |image|%>
          <div class="col">
            <div class="card h-100">
              <%= image_tag(image, class:'card-img-top') %>
              <div class="card-body">
              <p><%= link_to 'Show', picture %></p>
              <p><%= link_to 'Edit', edit_picture_path(picture) %></p>
              <p><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></p>
              <a href="#" class="btn btn-primary">Go somewhere</a>
              </div> 
            </div>
          </div>
        <% end %>
        </div>  
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Upload New Picture', new_picture_path %>